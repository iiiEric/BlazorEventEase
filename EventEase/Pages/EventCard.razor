<div class="event-card">
    <h3>@(string.IsNullOrWhiteSpace(EventName) ? "Evento sin nombre" : EventName)</h3>
    <p>Fecha: @(EventDate == default ? "Fecha no disponible" : EventDate.ToShortDateString())</p>
    <p>Ubicación: @(string.IsNullOrWhiteSpace(EventLocation) ? "Ubicación no definida" : EventLocation)</p>
</div>

@code {
    [Parameter] public string? EventName { get; set; }
    [Parameter] public DateTime EventDate { get; set; }
    [Parameter] public string? EventLocation { get; set; }
}